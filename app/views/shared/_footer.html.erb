<footer class="main-footer">
  <div class="row-fluid news-area">
    <div class="container">
      <div class="span4">
        <%= content_tag :h3, t("footer.newsletter.title") %>
        <%= content_tag :p, t("footer.newsletter.main_text") %>
        <%= simple_form_for :newsletter, url: nil, html:{class: "form-inline"} do |f| %>
        <div class="controls controls-row">
          <%= f.input :email, label: false, input_html: {class: "span7"} %> &nbsp;
          <%= f.submit "Enviar", class: "btn" %>
          </div>
        <% end %>
      </div>
      <div class="span4">
        <%= content_tag :h3, t("footer.social.title") %>
        <ul class="inline social-network">
          <li class="social-item">
            <i class="gift-facebook"></i>
          </li>
          <li class="social-item">
            <i class="gift-twitter"></i>
          </li>
          <li class="social-item">
            <i class="gift-mail"></i>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="row-fluid address-area">
    <div class="container">
      <div class="span4">
        <address class="address-item">
          <%= content_tag :p, t("footer.contact.title")%>
          <%= content_tag :em, t("footer.contact.address")%> <br>
          <%= content_tag :em, t("footer.contact.phone")%>
        </address>
      </div>
    </div>
  </div>
</footer>